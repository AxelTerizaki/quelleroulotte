    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/google-spreadsheet": "^3.3.1",
    "@types/node": "^18.15.11",
    "@types/source-map-support": "^0.5.6",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.57.1",

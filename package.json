  "build": {
    "appId": "QuelleRoulotte",
    "npmRebuild": "false",
    "win": {
      "target": [
        "zip"
      ],
      "compression": "normal",
      "publisherName": "Ouestampes",
      "verifyUpdateCodeSignature": false
    },
    "productName": "Quelle Roulotte?",
    "copyright": "Â© 2023 Ouestampes",
    "extraResources": [
      "frontend/**",
      "creds.json"
    ],
    "directories": {
      "output": "packages"
    },
    "files": [
      "dist/*",
      "package.json",
      "!**/node_modules/**/*"
    ]
  },
  "prettier": {
  "endOfLine": "auto",
	"singleQuote": true,
	"arrowParens": "avoid"
  }
}

{
  "name": "quelleroulotte",
  "version": "2.0.0",
  "description": "",
  "type": "module",
  "main": "dist/index.cjs",
  "scripts": {
    "start": "yarn build && yarn electron:start",
    "build": "yarn typecheck && node util/esbuild.js",
    "typecheck": "tsc",
    "electron:start": "electron .",
    "dist": "yarn build && electron-builder --dir",
    "lint": "eslint .",
    "prettier": "prettier --write frontend/ src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AxelTerizaki/quelleroulotte.git"
  },
  "author": "Guillaume Lebigot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AxelTerizaki/quelleroulotte/issues"
  },
  "homepage": "https://github.com/AxelTerizaki/quelleroulotte#readme",
  "dependencies": {
    "google-spreadsheet": "^3",
    "markdown-pro": "^1.1.7",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/google-spreadsheet": "^3",
    "@types/node": "^20.8.3",
    "@types/source-map-support": "^0.5.8",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "electron": "^24",
    "electron-builder": "^24.6.4",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "build": {
    "appId": "QuelleRoulotte",
    "npmRebuild": "false",
    "win": {
      "target": [
        "zip"
      ],
      "compression": "normal",
      "publisherName": "Ouestampes",
      "verifyUpdateCodeSignature": false
    },
    "productName": "Quelle Roulotte?",
    "copyright": "Â© 2023 Ouestampes",
    "extraResources": [
      "frontend/**",
      "creds.json"
    ],
    "directories": {
      "output": "packages"
    },
    "files": [
      "dist/*",
      "package.json",
      "!**/node_modules/**/*"
    ]
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  }
}

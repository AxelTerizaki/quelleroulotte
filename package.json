{
  "name": "quelleroulotte",
  "version": "2.0.0",
  "description": "",
  "type": "module",
  "main": "dist/index.cjs",
  "scripts": {
    "start": "npm run build && npm run electron:start",
    "build": "npm run typecheck && node util/esbuild.js",
    "typecheck": "tsc",
    "electron:start": "electron .",
    "dist": "npm run build && electron-builder --dir",
    "lint": "eslint .",
    "prettier": "prettier --write frontend/ src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AxelTerizaki/quelleroulotte.git"
  },
  "author": "Guillaume Lebigot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AxelTerizaki/quelleroulotte/issues"
  },
  "homepage": "https://github.com/AxelTerizaki/quelleroulotte#readme",
  "dependencies": {
    "google-spreadsheet": "^3",
    "markdown-pro": "^1.1.8",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/google-spreadsheet": "^3",
    "@types/node": "^22.8.1",
    "@types/source-map-support": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "electron": "^24",
    "electron-builder": "^24",
    "esbuild": "^0.19.12",
    "eslint": "^8",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-security": "^1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "execa": "^9.4.1",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "5.5"
  },
  "build": {
    "appId": "QuelleRoulotte",
    "npmRebuild": "false",
    "win": {
      "target": [
        "zip"
      ],
      "compression": "normal",
      "publisherName": "Ouestampes",
      "verifyUpdateCodeSignature": false
    },
    "productName": "Quelle Roulotte?",
    "copyright": "Â© 2023 Ouestampes",
    "extraResources": [
      "frontend/**",
      "creds.json"
    ],
    "directories": {
      "output": "packages"
    },
    "files": [
      "dist/*",
      "package.json",
      "!**/node_modules/**/*"
    ]
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  }
}
